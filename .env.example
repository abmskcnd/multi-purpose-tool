# ==============================================================================
# Multi-Purpose Tool - Environment Variables
# ==============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local or secrets to git
#
# Required for Vercel deployment:
# 1. Install Vercel CLI: npm i -g vercel
# 2. Link project: vercel link
# 3. Set env vars on Vercel Dashboard or: vercel env pull
# ==============================================================================

# ------------------------------------------------------------------------------
# üåê Site Configuration (Required)
# ------------------------------------------------------------------------------
# Base URL for the site (used in sitemap, robots.txt, meta tags)
NEXT_PUBLIC_APP_URL=https://vibetool.com

# Application display name
NEXT_PUBLIC_APP_NAME=Vibetool

# ------------------------------------------------------------------------------
# üîê Supabase (Optional - for analytics/feedback tracking)
# ------------------------------------------------------------------------------
# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Server-side only - for admin operations (keep secret!)
SUPABASE_SERVICE_ROLE_KEY=

# ------------------------------------------------------------------------------
# üìä Analytics (Optional)
# ------------------------------------------------------------------------------
# Google Analytics Measurement ID (format: G-XXXXXXXXXX)
NEXT_PUBLIC_GA_MEASUREMENT_ID=

# Google AdSense Publisher ID (format: ca-pub-XXXXXXXXXXXXXXXX)
NEXT_PUBLIC_ADSENSE_CLIENT_ID=

# ------------------------------------------------------------------------------
# üö© Feature Flags (Optional - defaults shown)
# ------------------------------------------------------------------------------
# Enable Google Analytics tracking
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# Enable Google AdSense ads
NEXT_PUBLIC_ENABLE_ADSENSE=false

# Enable premium features
NEXT_PUBLIC_ENABLE_PREMIUM=false

# Enable beta/experimental tools
NEXT_PUBLIC_ENABLE_BETA=false

# Enable dark mode toggle
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Enable PWA features (install prompt, offline support)
NEXT_PUBLIC_ENABLE_PWA=true

# Enable maintenance mode (shows maintenance page)
NEXT_PUBLIC_MAINTENANCE_MODE=false
